<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gbbtbb.graphviewerwidget" >
    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="15"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- The widget provider -->
        <receiver android:name=".GraphViewerWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <!-- This specifies the widget provider info -->
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/graph_viewer_widget_info" />
        </receiver>

        <service android:name=".GraphViewerWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

        <provider android:name=".GraphViewerDataProvider"
            android:exported="true"
            android:authorities="com.gbbtbb.graphviewerwidget.provider.datapoints" />

        <activity android:name="com.gbbtbb.graphviewerwidget.SettingsActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.gbbtbb.graphviewerwidget.UpdateAction" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
